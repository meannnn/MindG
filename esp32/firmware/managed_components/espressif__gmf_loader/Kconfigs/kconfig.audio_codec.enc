                bool "32 kHz"

            config GMF_AUDIO_CODEC_ENC_SBC_SAMPLE_RATE_44_1K
                bool "44.1 kHz"

            config GMF_AUDIO_CODEC_ENC_SBC_SAMPLE_RATE_48K
