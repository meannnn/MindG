            default 16 if GMF_AUDIO_CODEC_ENC_SBC_BLOCK_LENGTH_16

        choice
            prompt "SBC Encoder Subbands"
            default GMF_AUDIO_CODEC_ENC_SBC_SUBBANDS_8
            depends on GMF_AUDIO_CODEC_ENC_SBC_MODE_STD
